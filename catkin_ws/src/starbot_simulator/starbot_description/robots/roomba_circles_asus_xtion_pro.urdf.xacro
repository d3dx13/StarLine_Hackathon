<?xml version="1.0"?>
<!--
    - Base      : create
    - Stacks    : circles
    - 3d Sensor : kinect
-->    
<robot name="turtlebot" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find starbot_description)/urdf/starbot_common_library.urdf.xacro" />
  <xacro:include filename="$(find create_description)/urdf/create.urdf.xacro"/>
  <xacro:include filename="$(find starbot_description)/urdf/stacks/circles.urdf.xacro"/>
  <xacro:include filename="$(find starbot_description)/urdf/sensors/asus_xtion_pro.urdf.xacro"/>

  <create/>
  <stack_circles parent="base_link"/>
  <sensor_asus_xtion_pro  parent="base_link"/>
</robot>
